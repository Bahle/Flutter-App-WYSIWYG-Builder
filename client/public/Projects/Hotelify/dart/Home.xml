

  <import package="flutter_view_tools/flutter_view_tools.dart"/>
  <Home flutter-view="true">
    <scaffold>
      <app-bar as="appBar">
        <text as="title"/>
      </app-bar>
      <layout-builder as="body">
        <function as="builder" params="context, viewportConstraints">
          <single-child-scroll-view>
            <constrained-box>
              <box-constraints as="constraints" :minHeight="viewportConstraints.maxHeight"/>
              <stack/>
            </constrained-box>
          </single-child-scroll-view>
        </function>
      </layout-builder>
    </scaffold>
  </Home>
